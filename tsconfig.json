{
  "extends": "./node_modules/@polkadot/dev/config/tsconfig",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@sora-substrate/api": [
        "packages/api/src"
      ],
      "@sora-substrate/api/*": [
        "packages/api/src/*"
      ],
      "@sora-substrate/api-derive": [
        "packages/api-derive/src"
      ],
      "@sora-substrate/api-derive/*": [
        "packages/api-derive/src/*"
      ],
      "@sora-substrate/types": [
        "packages/types/src"
      ],
      "@sora-substrate/types/*": [
        "packages/types/src/*"
      ],
      "@sora-substrate/type-definitions": [
        "packages/type-definitions/src"
      ],
      "@sora-substrate/type-definitions/*": [
        "packages/type-definitions/src/*"
      ],
      "@sora-substrate/util": [
        "packages/util/src"
      ],
      "@sora-substrate/util/*": [
        "packages/util/src/*"
      ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
}